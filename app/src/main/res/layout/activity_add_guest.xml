<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:id="@+id/mainrel"
    android:clickable="true">




    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:src="@drawable/back"
        android:paddingHorizontal="10dp"
        android:id="@+id/back_add_guest"
       />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Guest"
        android:id="@+id/addguesttext"
        android:textSize="27sp"
        android:fontFamily="@font/avnxt_medium"
        android:textColor="#000000"
        android:gravity="center"
        android:layout_marginTop="10dp"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/addguesttext"
        android:layout_marginTop="6dp"
        android:background="#707070"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/inputs"
        android:layout_below="@id/addguesttext">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">


            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="10dp"
                android:paddingVertical="10dp"
                android:maxLength="25"
                android:background="@drawable/edittext_borders"
                android:id="@+id/name"
                android:layout_marginHorizontal="30dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/avnxt_medium"
                android:gravity="center"
                android:background="#FFFFFF"
                android:layout_marginTop="3dp"
                android:paddingVertical="7dp"
                android:layout_alignParentRight="true"
                android:text="Name"
                android:layout_marginHorizontal="40dp"
                android:layout_gravity="center"
                android:textColor="@color/gDark"
                android:textSize="15dp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">


            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="10dp"
                android:paddingVertical="10dp"
                android:maxLength="10"
                android:inputType="phone"
                android:maxLines="1"
                android:background="@drawable/edittext_borders"
                android:id="@+id/phoneNumber"
                android:layout_marginHorizontal="30dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/avnxt_medium"
                android:gravity="center"
                android:background="#FFFFFF"
                android:layout_marginTop="3dp"
                android:paddingVertical="7dp"
                android:layout_alignParentRight="true"
                android:text="Phone Number"
                android:layout_marginHorizontal="40dp"
                android:layout_gravity="center"
                android:textColor="@color/gDark"
                android:textSize="15dp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="40dp">

            <EditText
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:paddingVertical="10dp"
                android:hint="Enter OTP"
                android:maxLength="6"
                android:fontFamily="@font/avnxt_regular"
                android:background="@drawable/edittext_borders"
                android:id="@+id/put_otp"
                android:inputType="number"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Verify OTP"
                android:id="@+id/verify_otp"
                android:textColor="@color/gDark"
                android:fontFamily="@font/avnxt_medium"
                android:textSize="16dp"
                android:layout_toRightOf="@id/put_otp"
                android:layout_centerVertical="true"
                android:layout_marginHorizontal="20dp"/>


            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:minHeight="10dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="10dp"
                android:paddingHorizontal="15dp"
                android:fontFamily="@font/avnxt_demi"
                android:text="Get OTP"
                android:id="@+id/btn_get_otp"
                android:textColor="#FFFFFF"
                android:background="@drawable/btn_grad_borders"
                />



        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">


            <!--<EditText-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:paddingStart="10dp"-->
                <!--android:paddingVertical="10dp"-->
                <!--android:maxLength="25"-->
                <!--android:background="@drawable/edittext_borders"-->
                <!--android:id="@+id/purpose"-->
                <!--android:layout_marginHorizontal="30dp"/>-->

            <Spinner
                android:id="@+id/spinner1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="10dp"
                android:paddingVertical="10dp"
                android:layout_marginHorizontal="30dp"
                android:background="@drawable/edittext_borders" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/avnxt_medium"
                android:gravity="center"
                android:background="#FFFFFF"
                android:layout_marginTop="3dp"
                android:paddingVertical="7dp"
                android:layout_alignParentRight="true"
                android:text="▼  Purpose"
                android:layout_marginHorizontal="40dp"
                android:layout_gravity="center"
                android:textColor="@color/gDark"
                android:textSize="15dp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">


            <!--<EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="10dp"
                android:paddingVertical="10dp"
                android:maxLength="25"
                android:background="@drawable/edittext_borders"
                android:id="@+id/guest_flatno"
                android:layout_marginHorizontal="30dp"/>-->

            <com.replon.www.gaurdmanager.MultiSpinner
                android:id="@+id/mySpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="10dp"
                android:layout_marginHorizontal="30dp"
                android:paddingVertical="10dp"
                android:background="@drawable/edittext_borders"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/avnxt_medium"
                android:gravity="center"
                android:background="#FFFFFF"
                android:layout_marginTop="3dp"
                android:paddingVertical="7dp"
                android:layout_alignParentRight="true"
                android:text="▼  Flat Number"
                android:layout_marginHorizontal="40dp"
                android:layout_gravity="center"
                android:textColor="@color/gDark"
                android:textSize="15dp" />

        </RelativeLayout>





    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:paddingHorizontal="15dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/avnxt_demi"
        android:text="+ Add Vehicle"
        android:layout_below="@id/inputs"
        android:id="@+id/add_veh"
        android:textColor="#FFFFFF"
        android:background="@drawable/btn_grad_borders"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/edittext_borders"
        android:padding="10dp"
        android:layout_below="@id/inputs"
        android:id="@+id/veh_img"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/veh_num"
        android:layout_below="@id/inputs"
        android:textColor="#000000"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/veh_type"
        android:layout_below="@id/veh_num"
        android:textColor="#000000"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        />


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:layout_marginBottom="70dp"
        android:layout_alignParentBottom="true"
        android:fontFamily="@font/avnxt_demi"
        android:text="Add Guest"
        android:id="@+id/add_guest"
        android:textColor="#FFFFFF"
        android:background="@drawable/btn_grad_borders"
        android:layout_marginHorizontal="40dp"
        />


    <ProgressBar
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerInParent="true"
        android:id="@+id/progressBar"
        android:indeterminateTint="@color/gDark"/>





</RelativeLayout>